# General Shortcuts
alias cls="clear"
alias v="nvim"
alias f="fff"
alias shell="exec \$SHELL -l"

# File & Directory Operations
alias mv="mv -i"
alias rm="rm -Iv"
alias df="df -h"
alias du="du -h -d 1"

# LS Variants
alias ls="ls --color=auto --group-directories-first"
alias la="ls -A --color=auto --group-directories-first"

# Improved Tools
alias grep="grep --color=auto"

# Convenience / Safety
fk() {
  sudo "$(fc -ln -1)"
}

# Git Shortcuts
alias gs="git status"
